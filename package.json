{
    "name": "bulky",
    "version": "1.0.0",
    "description": "Batch processing made simple",
    "main": "main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "gulp serve",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "me.davide.bulky",
        "extraFiles": [
            {
                "from": "resources/${os}",
                "to": "Resources/bin",
                "filter": [
                    "**/*"
                ]
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DavideBecker/Bulky.git"
    },
    "author": "Davide Becker",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/DavideBecker/Bulky/issues"
    },
    "homepage": "https://github.com/DavideBecker/Bulky#readme",
    "dependencies": {
        "electron": "^2.0.5",
        "jquery": "^3.3.1",
        "sharp": "^0.20.5"
    },
    "devDependencies": {
        "@types/jquery": "^3.3.4",
        "electron-builder": "^20.22.0",
        "gulp": "^3.9.1",
        "gulp-sass": "^4.0.1",
        "electron-connect": "^0.6.3",
        "electron-rebuild": "^1.8.1"
    }
}
